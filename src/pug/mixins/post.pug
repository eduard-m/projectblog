mixin post(title, info, img, text, link)
    article.post
        h2.post__title #{title}
        .post__info  #{info}
        .post__img 
            img(src="img/posts-preview/" + img, alt= title)
        .post__content
            p #{text}
        .post__footer 
            .post__read-more
                +button-read-more("read more", link)
            .post__share-icons
                include ./../sections/share-icons.pug